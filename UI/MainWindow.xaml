<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterScreen"
        xmlns:local="clr-namespace:UI"
        Background="Black"
        mc:Ignorable="d"
        Title="Log In" Height="148.485" Width="228.03">
    <Grid>
        <Label x:Name="lblUsername" Content="Username:" Foreground="DarkRed" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsernameBox" HorizontalAlignment="Left" TabIndex="0" Height="26" Margin="81,10,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" KeyUp="txtUsernameBox_KeyUp"/>
        <Label x:Name="lblPassword" Content="password:" Foreground="DarkRed" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPasswordBox" HorizontalAlignment="Left" TabIndex="1" Height="26" Margin="81,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" KeyUp="txtPassword_KeyUp"/>
        <Button x:Name="btnLogIn" Background="DarkBlue" TabIndex="2" Foreground="DarkCyan" Content="Log in" HorizontalAlignment="Left" Margin="67,72,0,0" VerticalAlignment="Top" Width="91" RenderTransformOrigin="0.519,0.617" Height="26" Click="btnLogIn_Click"/>
    </Grid>
</Window>
